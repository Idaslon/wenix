{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "outputs": [
        "./apps/server/dist/**",
        "./apps/docs/storybook-static/**",
        "./apps/web/.next/**"
      ]
    },
    "start": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "outputs": []
    },
    "server#dev": {
      "env": [
        "AUTH_SECRET",
        "ENCRYPTION_SALT",
        "SERVER_PORT"
      ]
    },
    "server#build": {
      "env": [
        "AUTH_SECRET",
        "ENCRYPTION_SALT",
        "SERVER_PORT"
      ]
    },
    "web#dev": {
      "env": [
        "NEXT_PUBLIC_SITE_DOMAIN"
      ]
    },
    "web#build": {
      "env": [
        "NEXT_PUBLIC_SITE_DOMAIN"
      ]
    }
  }
}
